---
export interface CardProps {
  title: string;
  description: string;
  imageUrl: string;
  buttonText?: string;
  onButtonClick?: () => void;
}

const {
  title,
  description,
  imageUrl,
  buttonText = "Learn More",
  onButtonClick,
} = Astro.props;
---

<div
  class="max-w-sm sm:max-w-md md:max-w-lg lg:max-w-xl rounded overflow-hidden shadow-lg bg-white"
>
  <img class="w-full h-48 object-cover md:h-64" src={imageUrl} alt={title} />
  <div class="px-6 py-4">
    <div class="font-bold text-xl mb-2 text-gray-900">{title}</div>
    <p class="text-gray-700 text-base">
      {description}
    </p>
  </div>
  {
    buttonText && onButtonClick ? (
      <div class="px-6 pt-4 pb-2">
        <button
          onClick={onButtonClick}
          class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"
        >
          {buttonText}
        </button>
      </div>
    ) : null
  }
</div>
