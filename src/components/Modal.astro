---
export interface ModalProps {
  isOpen: boolean;
  onClose: () => void;
  title: string;
  content: string;
}

const { isOpen, onClose, title, content } = Astro.props;

// Funci√≥n para deshabilitar/habilitar el scroll del body
if (typeof window !== "undefined") {
  if (isOpen) {
    document.body.classList.add("overflow-hidden");
  } else {
    document.body.classList.remove("overflow-hidden");
  }
}
---

{
  isOpen ? (
    <div
      class="fixed inset-0 z-50 flex items-center justify-center backdrop-blur-sm bg-black bg-opacity-50 transition-all duration-500 ease-out"
      onclick={onClose}
    >
      <div
        class="bg-white rounded-lg shadow-lg p-6 sm:p-8 w-full max-w-sm sm:max-w-md md:max-w-lg lg:max-w-xl transform transition-all duration-500 ease-out opacity-0 scale-95 mx-4"
        class:list={[isOpen ? "opacity-100 scale-100" : "opacity-0 scale-95"]}
      >
        <div class="flex justify-between items-center mb-4">
          <h2 class="text-xl font-bold text-gray-900">{title}</h2>
          <button onclick={onClose} class="text-gray-500 hover:text-gray-700">
            &times;
          </button>
        </div>
        <div class="mb-6">
          <p class="text-gray-700">{content}</p>
        </div>
        <div class="flex justify-end">
          <button
            onclick={onClose}
            class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"
          >
            Cerrar
          </button>
        </div>
      </div>
    </div>
  ) : null
}
